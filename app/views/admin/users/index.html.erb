<% provide :page_title, t('menu.adminusers') %>
<% currently_at t('menu.adminusers') %>

<h2 class="mb-4"><%= t('menu.adminusers') %></h2>

<div class="btn-group mb-3">
  <%= link_to t('phrases.download'), admin_users_path(format: :zip), class: 'btn btn-secondary' %>
</div>

<%== pagy_bootstrap_nav @pagy %>

<table class="table table-striped table-hover">
  <thead>
  <tr>
    <th scope="col">#</th>
    <th scope="col">Name</th>
    <th scope="col">Email</th>
    <th scope="col">Created at</th>
    <th scope="col">Updated at</th>
  </tr>
  </thead>
  <tbody>
    <%= render @users %>
    <%# @users.each do |user| %>
      <%#= render 'admin/users/user.html.erb' %>
    <%# end %>
  </tbody>
</table>

<%== pagy_bootstrap_nav @pagy %>

<h3><%= t('phrases.files') %></h3>

<%= form_with url: admin_users_path do |f| %>
  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :archive, 'Select archive' %>
    </div>

    <div class="col-sm-10">
      <%= f.file_field :archive, class: 'form-control' %>
    </div>
  </div>

  <%= f.submit t('btn.upload'), class: 'btn btn-secondary' %>
<% end %>