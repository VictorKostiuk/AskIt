<% provide :page_title, 'Reset password' %>
<% currently_at 'Log in' %>

<h2 class="mb-4">Reset password</h2>

<%= form_with url: password_reset_path do |f|%>
  <div class="mb-3 row">
    <div class="col-sm-1 col-form-label">
      <%= f.label :email %>
    </div>

    <div class="col-sm-9">
      <%= f.email_field :email, value: params[:email], class: 'form-control form-control-lg' %>
    </div>
  </div>

  <%= f.submit t('btn.submit'), class: 'btn btn-secondary' %>
  <%= link_to t('btn.back'), new_session_path , class: 'btn btn-secondary' %>
<% end %>