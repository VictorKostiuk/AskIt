<%= render 'shared/errors', object: @answer %>

<%= form_with model: [@question, @answer] do |f| %>
    <div class="mb-3 row">
      <div class="col-sm-1 col-form-label">
        <%= f.label :body %>
      </div>

      <div class="col-sm-3">
        <%= f.text_area :body, class: 'form-control' %>
      </div>
    </div>

    <%= f.submit t('btn.submit'), class: 'btn btn-secondary' %>
<% end %>
