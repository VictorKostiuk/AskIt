<% provide :page_title, 'Log in' %>
<% currently_at 'Log in' %>

<h2 class="mb-4" >Log in</h2>

<%= form_with url: session_path do |f|%>

  <div class="mb-3 row">
    <div class="col-sm-1 col-form-label">
      <%= f.label :email %>
    </div>

    <div class="col-sm-9">
      <%= f.email_field :email, value: params[:email], placeholder: "E-mail", class: 'form-control form-control-lg' %>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-1 col-form-label">
      <%= f.label :password %>
    </div>

    <div class="col-sm-9">
      <%= f.password_field :password, class: 'form-control form-control-lg'  %>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="offset-sm-1 col-sm-10 ">
      <div class="form-check">
        <%= f.check_box :remember_me, class: 'form-check-input', value: '1' %>
        <%= f.label :remember_me, class: 'form-check-label' %>
      </div>
    </div>
  </div>

  <%= f.submit t('btn.submit'), class: 'btn btn-secondary btn-lg' %>
  <%= link_to 'Forgot password', new_password_reset_path, class: 'btn btn-secondary btn-lg' %>
<% end %>