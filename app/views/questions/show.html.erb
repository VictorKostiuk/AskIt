<% provide :page_title, @question.title %>
<% currently_at 'Questions' %>

<h2 class="mb-4"><%= @question.title %></h2>

<time datetime="<%= @question.formatted_created_at %>">
  <%= @question.formatted_created_at %>
</time>

<div class="lead my-3">
  <%= sanitize @question.body %>
</div>

<%= link_to 'Back', questions_path, class: 'btn btn-secondary' %>
<%= link_to 'Edit', edit_question_path(@question), class: 'btn btn-secondary' %>
<%= link_to 'Destroy', question_path(@question), class: 'btn btn-secondary',
            data: {method: :delete, confirm: 'Are you sure'} %>

<hr class="my-3">

<h2>Write your answer</h2>

<%= render 'answers/form', object: @answer %>

<h2 class="mt-5">Answers</h2>

<%= paginate @answers %>

<%= render partial: 'answers/answer', collection: @answers, as: :answer, locals: {question: @question} %>

<%= paginate @answers %>