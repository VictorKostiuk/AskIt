<article class="card my-3">
  <section class="card-header">
    <%= question.user.gravatar %>
    <%= question.user.name_or_email %>
  </section>

  <div class="card-body">
    <h3><%= link_to question.title, question_path(question) %></h3>

      <section class="card-text">
        <time datetime="<%= question.formatted_created_at %>">
          <small><%= question.formatted_created_at %></small>
        </time>

        <p class="my-2">
          <%= truncate strip_tags(question.body), length: 150, omission: t('global.text.omission') %>
        </p>
      </section>

      <%= link_to t('btn.edit'), edit_question_path(question), class: 'btn btn-secondary' %>
      <%= link_to t('btn.delete'), question_path(question), class: 'btn btn-secondary',
                  data: {method: :delete, confirm: 'Are you sure'} %>
  </div>
</article>