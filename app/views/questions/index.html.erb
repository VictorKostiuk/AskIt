<% provide :page_title, t('menu.questions') %>
<% currently_at t('menu.questions') %>

<h2 class="mb-4"><%= t('menu.questions') %></h2>

<p class="mb-3">
  <%= link_to t('btn.new.question'), new_question_path, class: 'btn btn-secondary' %>
</p>

<%= paginate @questions %>

<% @questions.each do |question| %>
  <article class="card">
    <div class="card-body">
      <h4><%= question.title %></h4>

      <section class="card-text">
        <time datetime="<%= question.formatted_created_at %>">
          <%= question.formatted_created_at %>
        </time>
        <p class="my-2">
          <%= truncate strip_tags(question.body), length: 120 %>
        </p>
      </section>
      <%= link_to t('btn.show'), question_path(question), class: 'btn btn-secondary' %>
      <%= link_to t('btn.edit'), edit_question_path(question), class: 'btn btn-secondary' %>
      <%= link_to t('btn.delete'), question_path(question), class: 'btn btn-secondary',
                  data: {method: :delete, confirm: 'Are you sure'} %>
    </div>
  </article>
<% end %>

<%= paginate @questions %>