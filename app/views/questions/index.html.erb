<% provide :page_title, 'Questions' %>
<% currently_at 'Questions' %>

<h2 class="mb-4">Questions</h2>

<p class="mb-3">
  <%= link_to 'New question', new_question_path, class: 'btn btn-secondary' %>
</p>

<%= paginate @questions %>

<% @questions.each do |question| %>
  <article class="card">
    <div class="card-body">
      <h4><%= question.title %></h4>

      <section class="card-text">
        <time datetime="<%= question.formatted_created_at %>">
          <%= question.formatted_created_at %>
        </time>
        <p class="my-2">
          <%= truncate strip_tags(question.body), length: 120 %>
        </p>
      </section>
      <%= link_to 'Show', question_path(question), class: 'btn btn-secondary' %>
      <%= link_to 'Edit', edit_question_path(question), class: 'btn btn-secondary' %>
      <%= link_to 'Destroy', question_path(question), class: 'btn btn-secondary',
                  data: {method: :delete, confirm: 'Are you sure'} %>
    </div>
  </article>
<% end %>

<%= paginate @questions %>